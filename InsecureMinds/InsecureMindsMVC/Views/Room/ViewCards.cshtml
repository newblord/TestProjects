@model  InsecureMindsMVC.Models.ViewCardsModel

<div class="modal-header">
    <h5 class="modal-title" id="exampleModalLabel">@Model.Expansion.Name Cards</h5>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="modal-body">

    <ul class="nav nav-pills mb-3">
        <li class="nav-item">
            <a class="nav-link active" id="questioncards-tab" data-toggle="pill" href="#questioncards" role="tab" aria-controls="questioncards" aria-selected="true">Question Cards</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="answercards-tab" data-toggle="pill" href="#answercards" role="tab" aria-controls="answercards" aria-selected="false">Answer Cards</a>
        </li>
    </ul>

    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="questioncards" role="tabpanel" aria-labelledby="questioncards-tab">
            <div class="row row-cols-1 row-cols-md-3">
                @foreach (var item in Model.Cards.Where(x => x.CardTypeId == Business.Enums.CardType.Black))
                {
                    <div class="col-md-4 mb-4">
                        <div id="expansionCard-@item.Id" class="card text-center">
                            <div class="card-body bg-dark text-white">
                                <p class="card-text">
                                    @item.Text
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="tab-pane fade" id="answercards" role="tabpanel" aria-labelledby="answercards-tab">
            <div class="row row-cols-1 row-cols-md-3">
                @foreach (var item in Model.Cards.Where(x => x.CardTypeId == Business.Enums.CardType.White))
                {
                    <div class="col-md-4 mb-4">
                        <div id="expansionCard-@item.Id" class="card text-center">
                            <div class="card-body">
                                <p class="card-text">
                                    @item.Text
                                </p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

</div>
<div class="modal-footer">
    <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
</div>

